	<profiles>
		<profile>
			<id>dev</id>
			<properties>
				<config.location>src/main/resources/dev</config.location>
			</properties>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
		</profile>
		<profile>
			<id>test</id>
			<properties>
				<config.location>src/main/resources/test</config.location>
